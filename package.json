{
  "name": "patients",
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "dependencies": {
    "@aureooms/js-cardinality": "^2.0.0",
    "@aureooms/js-codec-base64": "^2.0.1",
    "@aureooms/js-compare": "^1.4.8",
    "@aureooms/js-itertools": "^4.1.0",
    "@aureooms/js-mapping": "^4.0.0",
    "@aureooms/js-pairing-heap": "^1.0.0",
    "@babel/runtime": "^7.12.5",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.57",
    "@material-ui/pickers": "4.0.0-alpha.10",
    "@visx/axis": "1.4.0",
    "@visx/event": "^1.3.0",
    "@visx/gradient": "1.0.0",
    "@visx/grid": "1.4.0",
    "@visx/group": "1.0.0",
    "@visx/legend": "1.4.0",
    "@visx/mock-data": "1.0.0",
    "@visx/scale": "1.4.0",
    "@visx/shape": "1.4.0",
    "@visx/tooltip": "1.3.0",
    "bcrypt": "5.0.0",
    "chardet": "^1.3.0",
    "color": "^3.1.3",
    "currency-formatter": "^1.5.6",
    "date-fns": "^2.16.1",
    "debounce": "^1.2.0",
    "downshift": "^6.1.0",
    "escape-string-regexp": "^4.0.0",
    "file-saver": "^2.0.5",
    "gridfs-stream": "^1.1.1",
    "healthone": "3.0.0",
    "iban": "0.0.14",
    "iconv-lite": "^0.6.2",
    "keycode": "^2.2.0",
    "lodash.deburr": "^4.1.0",
    "meteor-node-stubs": "^1.0.1",
    "notistack": "^1.0.3",
    "papaparse": "^5.3.0",
    "pdfjs-dist": "^2.5.207",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.1",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.1",
    "react-loading": "^2.0.3",
    "react-router-dom": "^5.2.0",
    "react-spring": "^8.0.27",
    "regenerator-runtime": "^0.13.7",
    "sepa-payment-qr-code": "^1.0.0",
    "typeface-roboto": "^1.1.13",
    "use-debounce": "^5.2.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "emoji-favicon-cli": "^3.0.0",
    "eslint-config-xo-react": "^0.23.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.4.0",
    "husky": "^5.0.6",
    "lint-staged": "^10.5.3",
    "mup": "^1.5.3",
    "postinstall": "^0.7.0",
    "puppeteer": "^7.1.0",
    "total-order": "0.0.3",
    "xo": "^0.37.1"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint-and-fix"
    ]
  },
  "postinstall": {
    "typeface-roboto/index.css": "copy public/typeface-roboto/",
    "typeface-roboto/files/*.woff": "copy public/typeface-roboto/files/",
    "typeface-roboto/files/*.woff2": "copy public/typeface-roboto/files/",
    "pdfjs-dist/build/pdf.worker.js": "copy public/pdfjs-dist/build/",
    "pdfjs-dist/build/pdf.worker.js.map": "copy public/pdfjs-dist/build/",
    "pdfjs-dist/cmaps/": "copy public/pdfjs-dist/cmaps"
  },
  "private": true,
  "scripts": {
    "favicon": "emoji-favicon-cli -d public -v twitter face_with_thermometer",
    "lint": "xo",
    "lint-and-fix": "npm run lint -- --fix",
    "install-hooks": "husky install",
    "postinstall": "postinstall && npm run favicon",
    "precommit": "lint-staged",
    "dev": "meteor run -p ${PORT:-12345}",
    "bundle-visualizer": "npm run dev -- --extra-packages bundle-visualizer --production",
    "test": "meteor test --driver-package meteortesting:mocha",
    "cover": "BABEL_ENV=COVERAGE COVERAGE=1 COVERAGE_APP_FOLDER=$PWD/ COVERAGE_OUT_LCOVONLY=1 npm run test -- --extra-packages lmieulet:meteor-coverage",
    "travis": "npm run lint && TEST_BROWSER_DRIVER=puppeteer npm run cover -- --once",
    "setup-deploy": "mup setup",
    "build-and-upload": "mup deploy",
    "deploy": "git stash && git pull && git checkout $TAG && meteor npm clean-install && npm run build-and-upload && git stash pop"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "camelcase": "off",
      "no-constant-condition": "off",
      "no-negated-condition": "off",
      "capitalized-comments": "off",
      "no-labels": "off",
      "no-warning-comments": "off",
      "import/extensions": "off",
      "import/no-anonymous-default-export": "off",
      "unicorn/filename-case": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/prevent-abbreviations": "off",
      "react/function-component-definition": "off",
      "react/state-in-constructor": "off",
      "react/static-property-placement": "off",
      "react/prop-types": "off",
      "react/boolean-prop-naming": "off",
      "react/no-array-index-key": "off",
      "react/no-unsafe": "off",
      "react/require-default-props": "off"
    },
    "overrides": [
      {
        "files": [
          "client/*.js",
          "imports/ui/**/*.js",
          "imports/client/*.js"
        ],
        "env": "browser"
      },
      {
        "files": [
          "imports/api/*.mock.js",
          "imports/api/*.tests.js"
        ],
        "env": [
          "meteor",
          "mocha"
        ],
        "globals": [
          "Factory"
        ]
      }
    ]
  }
}
